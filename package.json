  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gitego-brian/BroadCaster/issues"
  },
  "homepage": "https://github.com/gitego-brian/BroadCaster#readme",
  "dependencies": {
    "@hapi/joi": "^16.1.8",
    "@sendgrid/mail": "^6.5.5",
    "axios": "^0.21.1",
